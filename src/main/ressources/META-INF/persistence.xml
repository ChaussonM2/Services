<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="myPersistenceUnit">
        <class>data.entity.Client</class>
        <class>data.entity.Produit</class>
        <!-- Configurer ton datasource ici -->
        <properties>
            <!-- URL, utilisateur et mot de passe de la base de données -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/chausson"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="password"/>

            <!-- Le pilote JDBC -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- DDL pour créer ou mettre à jour le schéma -->
            <property name="javax.persistence.schema-generation.database.action" value="update"/>

            <!-- Dialecte JPA -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>
